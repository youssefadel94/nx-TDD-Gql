{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@yadel/rockets/detail/data-access": [
        "libs/rockets/detail/data-access/src/index.ts"
      ],
      "@yadel/rockets/detail/feature": [
        "libs/rockets/detail/feature/src/index.ts"
      ],
      "@yadel/rockets/list/data-access": [
        "libs/rockets/list/data-access/src/index.ts"
      ],
      "@yadel/rockets/list/feature": ["libs/rockets/list/feature/src/index.ts"],
      "@yadel/rockets/list/ui/slider": [
        "libs/rockets/list/ui/slider/src/index.ts"
      ],
      "@yadel/rockets/shared/ui/card": [
        "libs/rockets/shared/ui/card/src/index.ts"
      ],
      "@yadel/rockets/shell/feature": [
        "libs/rockets/shell/feature/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
